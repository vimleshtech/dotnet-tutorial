@model EBMS.Models.itemcompanymodel

@{
    ViewBag.Title = "item_company";
    Layout = "~/Views/Shared/_websoft.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="container ">


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group ">
        @Html.LabelFor(model => model.item_company_name, htmlAttributes: new { name = "djadhjksad" })

        @Html.EditorFor(model => model.item_company_name, new { htmlAttributes = new {
        @class ="form-control",placeholder="ITEM COMPANY NAME"}})

        @Html.ValidationMessageFor(model => model.item_company_name, "", new { @class = "text-danger" })

    </div>

    <div class="form-group ">

        <input type="button" id="btnmy" value="Submit" class="btn-primary btn-lg form-control" />
        <br />
        <input type="button" id="Delete" value="Delete" name="Delete" class="btn-danger btn-lg form-control" />

    </div>

    <div id="mymodal" class="modalmy">
        <div class="modalmy-content">
            <div class="modalmy-header">
                <span class="myclose">&times;</span>
                <h3>Add Item Company Name Confirmation</h3>
            </div>
            <div class="modalmy-body">
                <p>Are you Sure want to add the record?</p>
                <input type="submit" value="Add" name="Add" class="btn-primary btn-lg" />
                <input type="button" id="Cancel" value="Cancel" class="btn-danger btn-lg" />
            </div>
            <div class="modalmy-footer">
                <h4>Item Company Name Can't be modify in future..........................</h4>
            </div>
        </div>
    </div>
    <div id="mymodal1" class="modalmy">
        <div class="modalmy-content" style="background-color:yellow;">
            <div class="modalmy-header" style="background-color:red;">
                <span id="span1"class="myclose">&times;</span>
                <h3>Delete Item Company Name Confirmation</h3>
            </div>
            <div class="modalmy-body">
                <h3>Are you Sure want to delete the record?</h3>
                <input type="submit" value="Delete" name="Delete" class="btn-primary btn-lg" />
                <input type="button" id="Cancelde" value="Cancel" class="btn-danger btn-lg" />
            </div>
            <div class="modalmy-footer" style="background-color:red;">
                <h4>Record Delete Permanently..........................</h4>
            </div>
        </div>
    </div>
</div>
    
}

<script>

    var btn = document.getElementById("btnmy");

    var btn2 = document.getElementById("Delete");

    var modal1 = document.getElementById("mymodal1");

    btn2.onclick = function () {
        modal1.style.display = "block";
        document.getElementById("Cancelde").focus();

    }
    var cf = document.getElementById("Cancel");
    var fc = document.getElementById("Cancelde");

    var modal = document.getElementById("mymodal");

    var span = document.getElementsByClassName("myclose")[0];

    var span1 = document.getElementById("span1");

    span1.onclick = function () {
        modal1.style.display = "none";
    }

    cf.onclick = function () {
        modal.style.display = "none";
    }

    fc.onclick = function () {
        modal1.style.display = "none";
    }

    span.onclick = function () {
        modal.style.display = "none";
    }

    btn.onclick = function () {
        modal.style.display = "block";
        document.getElementById("Cancel").focus();
    }
    window.onclick = function (event) {
        if (event.target == modal || event.target == modal1) {

            modal.style.display = "none";
            modal1.style.display = "none";
        }
    }
</script>
