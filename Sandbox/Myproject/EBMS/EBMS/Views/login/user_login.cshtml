@model EBMS.Models.userlogin

@{ 
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!--<meta http-equiv="refresh" content="2" /> -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/cs254.css" rel="stylesheet" />
    <link href="~/Content/css485.css" rel="stylesheet" />

    <style>
        input[type=text]:focus{
            background-color:black;
            color:white;
        }
        .grad1 {
            background-image: url('../../Content/Images/close-up-of-wooden-plank-326311.jpg');           
        }
        .grad2{
            background-image:url('../../Content/Images/background-blur-clean-clear-531880.jpg');
        }
        .grad1 {
            background-image: linear-gradient(to right, #ff8177 0%, #ff867a 0%, #ff8c7f 21%, #f99185 52%, #cf556c 78%, #b12a5b 100%);
        }

        .grad2 {
            background-image: linear-gradient(to top, #fbc2eb 0%, #a6c1ee 100%);
        }

        .grad3 {
            background-image: linear-gradient(120deg, #84fab0 0%, #8fd3f4 100%);
        }

        .grad4 {
            background-image: linear-gradient(120deg, #f093fb 0%, #f5576c 100%);
        }

        .grad5 {
            background-image: linear-gradient(to top, #5ee7df 0%, #b490ca 100%);
        }

        .grad6 {
            background-image: linear-gradient(to top, #fddb92 0%, #d1fdff 100%);
        }

        .grad7 {
            background-image: linear-gradient(to top, #7028e4 0%, #e5b2ca 100%);
        }

        .grad8 {
            background-image: linear-gradient(-20deg, #dcb0ed 0%, #99c99c 100%);
        }

        .grad9 {
            background-image: linear-gradient(-225deg, #231557 0%, #44107A 29%, #FF1361 67%, #FFF800 100%);
        }

        .grad10 {
            background-image: linear-gradient(-225deg, #FF3CAC 0%, #562B7C 52%, #2B86C5 100%);
        }
    </style>
</head>
    <body>
        <div class="limiter">
            <div class="container-login500" id="bckkj">
                <div class="wrap-login500 p-t-20 p-l-50 p-r-50 p-b-50" style="background-color:transparent;">
                    <h2 style="text-align:center;"> Account Login </h2>
                    @using (Html.BeginForm("user_login", "login", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="input-group input-group-lg">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-user"></i>
                                </span>
                            </div>
                            @Html.EditorFor(model => model.user_name1, new { htmlAttributes = new { @class = "form-control", placeholder = "username", autocomplete = "off" } })
                        </div>
                        <div class="input-group input-group-lg" style="margin-top:20px;">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-lock"></i>
                                </span>
                            </div>
                            @Html.EditorFor(model => model.user_password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password", type = "password" } })
                            <div class="input-group-append">
                                <span class="input-group-text">
                                    <i id="show_pass" class="fa fa-eye"></i>
                                </span>
                            </div>
                        </div>
                        <img id="imgcap" style="padding-top:10px; width:100px; height:50px;" src="/Login/GetCaptchaImage" title="Captcha" />
                        <button class="fa fa-refresh" onclick="getcaptchaimage()"></button><br />

                        <input type="text" style="margin-top:10px;" name="clentcapt" class="form-control" placeholder="Enter Captcha" />

                        <span style="color:red;">@ViewBag.errormessage</span><br />

                        <input style="margin-top:10px; border-radius:20px;" type="submit" value="Login" name="Login" class="form-control btn-primary" />

                    }

                </div>

            </div>
        </div>
    </body>
</html>

<script>

    window.onload = function () {            
        document.getElementById("user_name1").focus();
    }
    var x = Math.floor((Math.random() * 10) + 1);
    var y = document.getElementById("bckkj");
    switch (x) {
        case 1:
            y.classList.add("grad1");
            break;
        case 2:
            y.classList.add("grad2");
            break;
        case 3:
            y.classList.add("grad3");
            break;
        case 4:
            y.classList.add("grad4");
            break;
        case 5:
            y.classList.add("grad5");
            break;
        case 6:
            y.classList.add("grad6");
            break;
        case 7:
            y.classList.add("grad7");
            break;
        case 8:
            y.classList.add("grad8");
            break;
        case 9:
            y.classList.add("grad9");
            break;
        case 10:
            y.classList.add("grad10");
            break;
    }

    var dhsu = document.getElementById("show_pass");
    var sd = document.getElementById("user_password");

    dhsu.onmouseover = function () {
        sd.type = "text";
    }
    dhsu.onmouseout = function () {
        sd.type = "password";
    }
</script>


