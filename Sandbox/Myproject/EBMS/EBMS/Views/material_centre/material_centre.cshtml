@model EBMS.Models.materialcentremodel

@{
    ViewBag.Title = "material_centre";
    Layout = "~/Views/Shared/_websoft.cshtml";
}

@using (Html.BeginForm("material_centre","material_centre",FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <h2 style="text-align:center">Add Material Centre</h2>

    <div class="container">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group ">

            @Html.LabelFor(model => model.material_centre_name, htmlAttributes: new { id = "ign" })

            @Html.EditorFor(model => model.material_centre_name, new { htmlAttributes = new {
            @class ="form-control",placeholder="MATERIAL CENTRE NAME"}})

            @Html.ValidationMessageFor(model => model.material_centre_name, "", new { @class = "text-danger" })

        </div>

        <div class="form-group ">

            @Html.LabelFor(model => model.material_centre_type)

            @Html.EditorFor(model => model.material_centre_type,new { htmlAttributes = new {
            @class = "form-control",placeholder="MATERIAL CENTRE TYPE" }})

            @Html.ValidationMessageFor(model => model.material_centre_type, "", new { @clas = "text-success" })

        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.material_centre_address, htmlAttributes: new { })

            @Html.TextAreaFor(model => model.material_centre_address, new { @class = "form-control", placeholder = "Material Centre Address" })

            @Html.ValidationMessageFor(model => model.material_centre_address, "", new { @class = "text-danger" })

        </div>

        <div style="color:red; font-family:'Comic Sans MS';font-weight:bold;font-size:20px;">
            @ViewBag.status
        </div>

        <input type="submit" value="Add" name="Add" class="btn btn-primary btn-lg" />

        <div>

            @Html.ActionLink("Material List", "Material_centre_list")

        </div>
    </div>
    
}

